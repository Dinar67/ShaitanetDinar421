<Window x:Class="ShaitanetDinar421.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShaitanetDinar421"
        mc:Ignorable="d"
        Title="Шайтане" MinHeight="600" MinWidth="1000" Width="1200" WindowStartupLocation="CenterScreen" WindowStyle="None" Icon="\Resources\Logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock VerticalAlignment="Center" Margin="10 0">Шайтане</TextBlock>
 
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0">
                <Button x:Name="HideBtn" Click="HideBtn_Click" Width="80">Свернуть</Button>
                <Button x:Name="CloseBtn" Click="CloseBtn_Click" Width="80" Margin="10 0 0 0">Закрыть</Button>
            </StackPanel>
        </Grid>


        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
